<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#dfdac8">

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="计算器"
        android:gravity="center"/>

    <include layout="@layout/text_view"
        android:id="@+id/text_view_all"
        android:layout_width="match_parent"
        android:layout_height="100dp">
    </include>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center">
           <Button
               android:text="("
               android:textColor="#fff"
               android:textSize="20dp"
               android:layout_margin="2.5dp"
               android:background="@drawable/selector_other_but"
               android:layout_width="65dp"
               android:layout_height="61dp" />
           <Button
               android:text=")"
               android:textColor="#fff"
               android:textSize="20dp"
               android:layout_margin="2.5dp"
               android:background="@drawable/selector_other_but"
               android:layout_width="65dp"
               android:layout_height="61dp" />
           <Button
               android:text="/"
               android:textColor="#fff"
               android:textSize="20dp"
               android:layout_margin="2.5dp"
               android:background="@drawable/selector_other_but"
               android:layout_width="65dp"
               android:layout_height="61dp" />
           <Button
               android:text="*"
               android:textColor="#fff"
               android:textSize="20dp"
               android:layout_margin="2.5dp"
               android:background="@drawable/selector_other_but"
               android:layout_width="65dp"
               android:layout_height="61dp" />
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_margin="2.5dp"
                android:text="7"
                android:textSize="20dp"
                android:background="@drawable/selector_number_but"
                android:layout_width="65dp"
                android:layout_height="61dp" />
            <Button
                android:layout_margin="2.5dp"
                android:text="8"
                android:textSize="20dp"
                android:background="@drawable/selector_number_but"
                android:layout_width="65dp"
                android:layout_height="61dp" />
            <Button
                android:layout_margin="2.5dp"
                android:text="9"
                android:textSize="20dp"
                android:background="@drawable/selector_number_but"
                android:layout_width="65dp"
                android:layout_height="61dp" />
            <Button
                android:text="-"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_margin="2.5dp"
                android:background="@drawable/selector_other_but"
                android:layout_width="65dp"
                android:layout_height="61dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_margin="2.5dp"
                android:text="4"
                android:textSize="20dp"
                android:background="@drawable/selector_number_but"
                android:layout_width="65dp"
                android:layout_height="61dp" />
            <Button
                android:layout_margin="2.5dp"
                android:text="5"
                android:textSize="20dp"
                android:background="@drawable/selector_number_but"
                android:layout_width="65dp"
                android:layout_height="61dp" />
            <Button
                android:layout_margin="2.5dp"
                android:text="6"
                android:textSize="20dp"
                android:background="@drawable/selector_number_but"
                android:layout_width="65dp"
                android:layout_height="61dp" />
            <Button
                android:text="+"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_margin="2.5dp"
                android:background="@drawable/selector_other_but"
                android:layout_width="65dp"
                android:layout_height="61dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_margin="2.5dp"
                        android:text="1"
                        android:textSize="20dp"
                        android:background="@drawable/selector_number_but"
                        android:layout_width="65dp"
                        android:layout_height="61dp" />
                    <Button
                        android:layout_margin="2.5dp"
                        android:text="2"
                        android:textSize="20dp"
                        android:background="@drawable/selector_number_but"
                        android:layout_width="65dp"
                        android:layout_height="61dp" />
                    <Button
                        android:layout_margin="2.5dp"
                        android:text="3"
                        android:textSize="20dp"
                        android:background="@drawable/selector_number_but"
                        android:layout_width="65dp"
                        android:layout_height="61dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_margin="2.5dp"
                        android:background="@drawable/selector_delete_but"
                        android:layout_width="65dp"
                        android:layout_height="61dp" />
                    <Button
                        android:layout_margin="2.5dp"
                        android:text="0"
                        android:textSize="20dp"
                        android:background="@drawable/selector_number_but"
                        android:layout_width="65dp"
                        android:layout_height="61dp" />
                    <Button
                        android:layout_margin="2.5dp"
                        android:text="."
                        android:textSize="20dp"
                        android:background="@drawable/selector_number_but"
                        android:layout_width="65dp"
                        android:layout_height="61dp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_margin="2.5dp"
                android:layout_width="65dp"
                android:layout_height="127dp"
                android:text="="
                android:textColor="#fff"
                android:textSize="30dp"
                android:background="@drawable/selector_equal_but"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
